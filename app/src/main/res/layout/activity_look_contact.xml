<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".LookContactActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">


        <TableRow
            android:layout_marginBottom="30dp"
            android:background="@color/white"
            android:padding="5dp">

            <TextView
                android:id="@+id/nameContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="nome contatto"
                android:textAlignment="center"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="30dp"
            android:background="@color/white"
            android:padding="5dp">

            <ImageView
                android:id="@+id/contactImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/img_utente_default"
                android:textAlignment="center">

            </ImageView>

        </TableRow>


        <!-- row row insert phone number-->
        <TableRow
            android:layout_margin="5sp"
            android:background="@color/white"
            android:padding="5dp">

            <TextView
                android:id="@+id/labelPhoneNumberText2"
                android:layout_width="190dp"
                android:layout_height="wrap_content"

                android:text="numero"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textPhoneNumber2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="__phoneNumber__"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_margin="5sp"
            android:background="@color/white"
            android:padding="5dp">

            <TextView
                android:id="@+id/labelEmailText2"
                android:layout_width="190dp"
                android:layout_height="wrap_content"

                android:text="e-mail"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/emailText2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="__email__"
                android:textAlignment="center" />
        </TableRow>

        <!-- row buttons-->

        <TableRow
            android:layout_margin="5sp"
            android:background="@color/white"
            android:padding="5dp">

            <Button
                android:id="@+id/okButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:text="ok" />

            <Button
                android:id="@+id/editButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:text="edit" />
            <Button
                android:id="@+id/deleteButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:text="cancel" />

        </TableRow>



    </TableLayout>


</LinearLayout>